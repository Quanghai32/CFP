<Window x:Class="nspChildProcessModel.wdAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CHECKER FRAME PROGRAM"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    
    <Grid>
        <StackPanel>
            <DockPanel LastChildFill="True" Background="LightGreen">
                <Image Width="120" Height="80" HorizontalAlignment="Left">
                    <Image.Source >
                        <BitmapImage
                                UriSource="Resources/CFPLogo2.png" />
                    </Image.Source>
                </Image>
                <StackPanel HorizontalAlignment="Right">
                    <Label FontSize="20" FontWeight="Bold" FontStyle="Italic" Foreground="Blue" Margin="0,0,20,0" >CHECKER FRAME PROGRAM</Label>
                    <Label FontSize="14" FontWeight="Normal" FontStyle="Normal" Foreground="Black" >Copyright 2016 @ CVN - TL PED</Label>
                </StackPanel>
                
            </DockPanel>
            <TextBlock x:Name="tblInfo" Margin="10,20,10,20" TextWrapping="Wrap">This is sample Info</TextBlock>
        </StackPanel>
    </Grid>
</Window>
