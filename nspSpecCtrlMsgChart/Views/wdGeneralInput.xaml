<Window x:Class="nspSpecMsgChart.Views.wdGeneralInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="wdBarcodeReading" 
        ResizeMode="NoResize"
        Height="300" Width="640">

    <Grid Background="WhiteSmoke">
        <TextBlock x:Name="tbMessage" TextWrapping="Wrap" FontSize="20" Width="600" Foreground="Black" FontWeight="Bold" Margin="10,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">Please input:</TextBlock>
        <TextBox x:Name="tbInput" Background="LightCyan" Foreground="Blue" TextWrapping="Wrap" FontSize="20" KeyDown="tbInput_KeyDown" Width="600" Height="40" FontWeight="Bold" Margin="10,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button x:Name="btnBackGround" Click="btnBackGround_Click" Background="LightCoral" Width="100" Height="40" Margin="389,191,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">Send to Back</Button>
        <Button x:Name="btnCancel" Click="btnCancel_Click" Background="LightCoral" Width="100" Height="40" Margin="267,191,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">Cancel</Button>
        <Button x:Name="btnOK" Click="btnOK_Click" Background="LightGreen" Width="100" Height="40" Margin="510,191,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" RenderTransformOrigin="-0.7,0.375">OK</Button>
    </Grid>
</Window>
