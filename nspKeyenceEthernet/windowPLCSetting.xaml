<Window x:Class="nspKeyenceEthernet.windowPLCSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="windowPLCSetting" 
        Loaded="Window_Loaded"
        Height="200" Width="400">
    <Grid>
        <Label Foreground="Blue" FontWeight="Bold" Margin="20,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">Please Input ID for PLC</Label>
        <TextBox x:Name="tbInputID" Width="300" Background="LightGreen" Foreground="Blue" FontWeight="Bold" Margin="20,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBox>
        <Button x:Name="btnApply" Width="100" Foreground="Blue" FontWeight="Bold" Margin="20,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">Apply</Button>
    </Grid>
</Window>
