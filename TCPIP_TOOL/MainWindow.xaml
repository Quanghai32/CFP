<Window x:Class="TCPIP_TOOL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TCP/IP TOOL VER0.01" Height="250" Width="525"
        Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="btnSend" Click="btnSend_Click" Content="SEND" HorizontalAlignment="Left" Margin="28,33,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.093,-1.364"/>
        <TextBox x:Name="tbSend" HorizontalAlignment="Left" Height="23" Margin="128,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="359"/>
        <TextBox x:Name="tbReceive" HorizontalAlignment="Left" Height="23" Margin="128,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="359"/>
        <Label Content="RECEIVE" HorizontalAlignment="Left" Margin="28,83,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnContinue" Click="btnContinue_Click" Content="Continue" HorizontalAlignment="Left" Margin="128,179,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.907,0"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="23" Margin="128,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="359"/>
        <Label Content="MESSAGE" HorizontalAlignment="Left" Margin="28,136,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
