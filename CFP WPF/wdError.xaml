<Window x:Class="CFP_WPF.wdError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CFP_WPF"
        mc:Ignorable="d"
        Title="Error Message" Height="400" Width="800"
        Topmost="True" WindowStartupLocation="CenterScreen"
        Background="Yellow"
        >
    <Grid>
        <Label FontSize="20" Height="40"  Foreground="Red" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="103,89,0,0">Warning: This program already open!</Label>
        <Label FontSize="20" Height="40"  Foreground="Red" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="103,137,0,0">Please check again (check in Task manager if necessary)!</Label>
        <Label FontSize="20" FontFamily="Times New Roman" Height="40" Foreground="Red" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="103,207,0,0">Cảnh báo: Chương trình này đã được mở!</Label>
        <Label FontSize="20" FontFamily="Times New Roman" Height="40"  Foreground="Red" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="103,247,0,0">Đề nghị kiểm tra lại (Kiểm tra Task Manager nếu cần thiết!)!</Label>

    </Grid>
</Window>
