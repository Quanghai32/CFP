<Window x:Class="CalibControlExpression.Views.wdRequestCalib"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalibControlExpression.Views"
        mc:Ignorable="d"
        Title="wdRequestCalib" Height="400" Width="600">
    <Grid>
        <Label Content="{Binding RequestMessage.Value}" Foreground="{Binding RequestMessageColor.Value}" FontWeight="Bold" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="29,68,0,0"></Label>
        <Button x:Name="btnShowCalibForm" Command="{Binding ShowCalibFormCommand}" Background="LightGreen" Height="40" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="236,164,0,0">START CALIB</Button>
    </Grid>
</Window>
