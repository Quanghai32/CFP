<Window x:Class="CalibControlExpression.Views.wdValObserver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adjusted Value Observer Ver01" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Visible" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,0">
            <StackPanel x:Name="spnlContent" Width="400">

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Column="1" x:Name="spnlControl" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,20,0,0">
            <Button x:Name="btnStopContinue" FontSize="16" FontWeight="Bold" Background="LightGreen" Width="150" Height="50" Margin="0,0,0,20">STOP</Button>
            <Button x:Name="btnOK" FontSize="16" FontWeight="Bold" Background="LightGreen" Width="150" Height="50" Content="OK"/>
        </StackPanel>
    </Grid>
</Window>
